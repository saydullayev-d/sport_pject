          </Menu>
        </menus>
      </MenuBar>
      <TableView fx:id="sport_club_table" layoutY="27.0" prefHeight="373.0" prefWidth="600.0">
        <columns>
          <TableColumn fx:id="id_col" prefWidth="75.0" text="№" />
