<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sport_project.controllers.WindowForSportClub">
   <children>
      <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="600.0">
        <menus>
          <Menu mnemonicParsing="false" text="Добавить">
            <items>
              <MenuItem fx:id="add_sport_club_btn" mnemonicParsing="false" text="Добавить " />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Работа с таблицей">
            <items>
              <MenuItem mnemonicParsing="false" text="Изменить" />
