<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sport_project.controllers.WindowForWeightCategory">
    <children>
        <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="600.0">
            <menus>
                <Menu mnemonicParsing="false" text="Добавить">
                    <items>
                        <MenuItem fx:id="add_weight_category_btn" mnemonicParsing="false" text="Добавить " />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Работа с таблицей">
                    <items>
                        <MenuItem fx:id="data_delete" mnemonicParsing="false" text="Удалить" />
                        <MenuItem fx:id="update_table" mnemonicParsing="false" text="Обновить" />
                        <MenuItem fx:id="data_change" mnemonicParsing="false" text="Изменить" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <TableView fx:id="weight_table" layoutY="27.0" prefHeight="373.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="id_col" prefWidth="75.0" text="№" />
                <TableColumn fx:id="weight_col" prefWidth="524.0" text="Весовые категории" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
